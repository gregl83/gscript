#!/usr/bin/env bash

while [[ $# > 1 ]]
do
    key="$1"

    case ${key} in
        -o|--option)
        OPTION="$2"
        shift # past argument
        ;;
        -c|--config)
        CONFIG="$2"
        shift # past argument
        ;;
        --default)
        DEFAULT=1
        ;;
        *)
            # unknown option
        ;;
    esac
    shift # past argument or value
done